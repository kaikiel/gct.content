<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="db.connect">

    <configlet
        title="Custom Related Setting"
        action_id="gct.connect.Dict"
        appId="gct.connect"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@categoriesControlPanel"
        icon_expr="string:/favicon.ico"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>
    <configlet
        title="Basic Inform"
        action_id="gct.connect.Inform"
        appId="gct.connect"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@basicInformControlPanel"
        icon_expr="string:/favicon.ico"
        visible="True">
            <permission>Manage portal</permission>
    </configlet>

</object>
